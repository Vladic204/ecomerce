generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma" // <- Asigură-te că această cale există și este corectă
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // <- Asigură-te că variabila DATABASE_URL e setată corect în .env
}
